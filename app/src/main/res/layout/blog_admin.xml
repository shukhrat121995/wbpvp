<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/blog_id"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/input_outline"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <ImageView
                android:id="@+id/post_image"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="250dp"/>

            <ImageView
                android:id="@+id/image_status"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/test" />

        </FrameLayout>
        <TextView
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="18sp"
            android:id="@+id/post_title"
            android:text="This is a title lasdjf;l;asldkfj;alksfdj;laksfdj"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"/>
        <TextView
            android:id="@+id/post_description"
            android:textSize="14sp"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingRight="10dp"
            android:text="This is a description ;laskdjf;asldkfj;alskdfjasdfalsasdfasdfasdfasdfasdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/post_location"
                android:layout_weight="2"
                android:textSize="12sp"
                android:paddingTop="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Andijan/Pakhtaobod/Sohil MFY"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/post_date"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textAlignment="viewEnd"
                android:layout_gravity="end"
                android:paddingTop="5dp"
                android:textColor="#32104A"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="11/03/2020"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
