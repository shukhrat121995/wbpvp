<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
     <LinearLayout
         android:layout_width="match_parent"
         android:orientation="vertical"
         android:layout_margin="3dp"
         android:layout_height="wrap_content">

         <com.anychart.AnyChartView
             android:layout_margin="5dp"
             android:id="@+id/any_chart_total_population"
             android:layout_width="match_parent"
             android:layout_height="300dp"/>
         <LinearLayout
             android:layout_width="match_parent"
             android:orientation="vertical"
             android:background="@drawable/table_border"
             android:layout_margin="5dp"
             android:layout_height="wrap_content">
             <LinearLayout
                 android:layout_width="match_parent"
                 android:weightSum="100"
                 android:layout_height="60dp">
                 <ImageView
                     android:layout_width="0dp"
                     android:layout_weight="10"
                     android:layout_gravity="bottom|center"
                     android:tint="@color/colorPrimary"
                     android:src="@drawable/location_icon"
                     android:layout_height="wrap_content"/>
                 <View android:layout_width="0dp"
                     android:layout_gravity="bottom"
                     android:layout_weight="80"
                     android:background="@color/gray_btn_bg_color"
                     android:layout_height="3dp"/>
                 <ImageView
                     android:layout_width="0dp"
                     android:layout_weight="10"
                     android:layout_gravity="bottom|center"
                     android:tint="@color/colorPrimary"
                     android:src="@drawable/location_city"
                     android:layout_height="wrap_content"/>
             </LinearLayout>
             <TextView
                 android:layout_width="match_parent"
                 android:gravity="center"
                 android:text="Remoteness from district centre: 7km"
                 android:textSize="14sp"
                 android:layout_marginBottom="10dp"
                 android:textStyle="bold"
                 android:layout_height="wrap_content"/>
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:orientation="vertical"
             android:background="@drawable/table_border"
             android:layout_margin="5dp"
             android:layout_height="wrap_content">
             <LinearLayout
                 android:layout_width="match_parent"
                 android:weightSum="100"
                 android:layout_height="60dp">
                 <ImageView
                     android:layout_width="0dp"
                     android:layout_weight="10"
                     android:layout_gravity="bottom|center"
                     android:tint="@color/colorPrimary"
                     android:src="@drawable/action_people"
                     android:layout_height="30dp"/>
                 <View android:layout_width="0dp"
                     android:layout_gravity="bottom"
                     android:layout_weight="80"
                     android:background="@color/gray_btn_bg_color"
                     android:layout_height="3dp"/>
                 <ImageView
                     android:layout_width="0dp"
                     android:layout_weight="10"
                     android:layout_gravity="bottom|center"
                     android:src="@drawable/drinking_water"
                     android:layout_height="30dp"/>
             </LinearLayout>
             <TextView
                 android:layout_width="match_parent"
                 android:gravity="center"
                 android:text="Access to drinking water: 20-40%"
                 android:textSize="14sp"
                 android:layout_marginBottom="10dp"
                 android:textStyle="bold"
                 android:layout_height="wrap_content"/>
         </LinearLayout>
         <com.anychart.AnyChartView
             android:layout_margin="5dp"
             android:id="@+id/any_chart_projects"
             android:layout_width="match_parent"
             android:layout_height="300dp"/>
     </LinearLayout>
</ScrollView>