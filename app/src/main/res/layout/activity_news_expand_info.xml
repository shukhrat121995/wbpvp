<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".ui.news.NewsExpandInfo">
            <ImageView
                android:layout_width="match_parent"
                android:adjustViewBounds="true"
                android:id="@+id/news_expand_imageView"
                android:background="#000"
                android:scaleType="fitCenter"
                android:layout_height="250dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:textStyle="bold"
                    android:layout_weight="2"
                    android:paddingLeft="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center|start"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="0dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:paddingRight="5dp"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/news_expand_date"
                    android:textSize="14sp"
                    android:text="Feedback Date"
                    android:gravity="center|end"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/news_expand_title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="#000"
                android:layout_margin="5dp"
                android:text="Feedback Title"
                android:gravity="center|start"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textStyle="bold"
                android:lineSpacingExtra="3dp"
                android:layout_margin="5dp"
                android:textColor="#232323"
                android:id="@+id/news_expand_description"
                android:textSize="16sp"
                android:text="Feedback description"
                android:gravity="center|start"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:lineSpacingExtra="3dp"
                android:layout_margin="5dp"
                android:textColor="#232323"
                android:id="@+id/news_expand_text"
                android:textSize="16sp"
                android:text="Feedback full text"
                android:gravity="center|start"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>