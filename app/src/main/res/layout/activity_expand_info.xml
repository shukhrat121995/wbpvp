<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".admin.AdminEdit">
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/user_imageView"
                android:background="#000"
                android:scaleType="centerCrop"
                android:layout_height="250dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:textStyle="bold"
                    android:layout_weight="2"
                    android:paddingLeft="5dp"
                    android:id="@+id/user_feedbackLocation"
                    android:textSize="14sp"
                    android:text="Feedback Location"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center|start"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="0dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:paddingRight="5dp"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/user_feedbackDate"
                    android:textSize="14sp"
                    android:text="Feedback Date"
                    android:gravity="center|end"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/user_feedbackTitle"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingLeft="5dp"
                android:textColor="#000"
                android:layout_margin="5dp"
                android:text="Feedback Title"
                android:gravity="center|start"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:paddingLeft="5dp"
                android:layout_margin="5dp"
                android:textColor="#232323"
                android:id="@+id/user_feedbackDescription"
                android:textSize="16sp"
                android:text="ksjdf;lkajsdf;lkjas;dlkfja;sldkjf"
                android:gravity="center|start"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/admin_container"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_marginLeft="50dp"
                    android:src="@drawable/arrow_feedback"
                    android:layout_height="20dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/admin_reply"
                    android:gravity="start"
                    android:paddingLeft="5dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textSize="14sp"
                    android:text="Empty"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:background="@drawable/round_corner_textview"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/admin_reply_date"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/round_corner_textview_bottom"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:text="28/03/2020"
                    android:gravity="end"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
